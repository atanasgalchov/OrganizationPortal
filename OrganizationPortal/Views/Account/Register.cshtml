@model  RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_LayoutAccount";
    OrganizationPortal.Controllers.AccountController controller = ViewBag.Controller;
}

<div id="register" class="animate form">
    <section class="login_content">
        <form method="post" action="@Url.Action("Register", "Account")" style="top:100px">
            <h1>Create Account</h1>
            <div>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Username" })
                @Html.ValidationMessageFor(x => x.UserName)
            </div>
            <div>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div>
                @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(x => x.ConfirmPassword)
            </div>
            <div>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email" })
                @Html.ValidationMessageFor(x => x.Email)
            </div>
            <div>
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control", placeholder = "First Name" })
                @Html.ValidationMessageFor(x => x.FirstName)
            </div>
            <div>
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control", placeholder = "Last Name" })
                @Html.ValidationMessageFor(x => x.LastName)
            </div>
            <div>
                <button type="submit" class="btn btn-default submit">Register</button>
            </div>

            <div class="clearfix"></div>

            <div class="separator">
                <div class="clearfix"></div>
                <br />

                <div>
                    <img src="~/Content/Images/logo/logo.png" style="max-width: 50px;" />  <h1>@controller.Resources.GetAppResourcesValue(Resources.AppResourcesKeys.AppName.ToString()) </h1>
                    @*<p>©2016 All Rights Reserved.  @controller.Resources.GetAppResourcesValue(Resources.AppResourcesKeys.AppName.ToString())  is a Bootstrap 3 template. Privacy and Terms</p>*@
                </div>
            </div>
        </form>
    </section>
</div>