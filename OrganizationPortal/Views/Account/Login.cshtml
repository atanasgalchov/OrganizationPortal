@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
    OrganizationPortal.Controllers.AccountController controller = ViewBag.Controller;
}
<div class="animate form login_form">
    <section class="login_content">
        <form method="post" action="@Url.Action("Login", "Account")" style="top:100px">
            <h1>Login Form</h1>
            <div>
                @Html.TextBoxFor(x => x.UserName, new { @class = "form-control", placeholder = "Username" })
                @Html.ValidationMessageFor(x => x.UserName)
            </div>
            <div>
                @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Password" })
                @Html.ValidationMessageFor(x => x.Password)
            </div>
            <div>
                <button type="submit" class="btn btn-default submit">Log in</button>
                <span>
                    <a href="@Url.Action("Register", "Account")">Register</a>
                    <a href="@Url.Action("ResetPassword", "Account")">Lost your password?</a>
                </span>
            </div>
  
            <div class="clearfix"></div>

            <div class="separator">
                <div class="clearfix"></div>
                <br />
                <div>
                    <img src="~/Content/Images/logo/logo.png" style="max-width: 50px;" /> <h1>@controller.Resources.GetAppResourcesValue(Resources.AppResourcesKeys.AppName.ToString()) </h1>
                    @*<p>©2016 All Rights Reserved. Gentelella Alela! is a Bootstrap 3 template. Privacy and Terms</p>*@
                </div>
            </div>
        </form>
    </section>
</div>

